
<div class="container">
  <% if @user.errors.any? %>
    <%= @user.errors.count %>件のエラーが発生しました
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div clss="row">
    <div class="col mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user, method: :patch do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </dev>
      <div class="form-group">
        <label for="inputImage">Image</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="form-group">
        <label for="inputIntroduction">Introduction</label>
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction"%>
      </div>
      <div class="form-group">
        <%= f.submit "Update User" %>
      </div>
      <% end %>
    </div>
  </div>
</div>