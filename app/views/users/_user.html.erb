
<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><% user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><% user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <a class="btn btn-outline-primary btn-block" href="/users/:id/edit"><i class="fa-solid fa-user-gear"></i></a>
  </div>
  <h2>New book</h2>
    <%= form_with model: Book.new do |f| %>
    <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <label for="book_body">Opinion</label>
      <%= f.text_area :body %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>
