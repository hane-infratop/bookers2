<div class="container px-5">
  <div class="row">
    <%= render 'users/user' %>
    <div class="col-md-8 offset-1">
      <h2>Book detail</h2>
      <table class="table table-hover">
        <%= @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %>
                <%= link_to book.user.name, user_path(book.user.id), method: :get %>
            </td>
            <td><span><%= book.title %></span></td>
            <td><span><%= book.body %></span></td>
            <td>
              <% if book.user == current_user %>
                <%= link_to "Edit", edit_book_path(book.id), method: get %>
              <% end %>
            </td>
            <td>
              <% if book.user == current_user %>
                <%= link_to "Destroy", book_path(book.id), method: delete %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>